@model ETicaret.Entity.Concrete.Category
@{
    ViewData["Title"] = "Yeni Kategori";
}

<div class="stat-card">
    <h4 class="mb-4">Yeni Kategori Ekle</h4>
    
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Kategori Adı</label>
                    <input asp-for="Name" class="form-control bg-dark text-light border-secondary" required />
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Açıklama</label>
                    <textarea asp-for="Description" class="form-control bg-dark text-light border-secondary" rows="3"></textarea>
                </div>
                

                
                <div class="mb-3">
                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                        <label class="form-check-label">Aktif</label>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="mt-4">
            <button type="submit" class="btn btn-primary-custom">
                <i class="bi bi-check-lg me-2"></i>Kaydet
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                <i class="bi bi-arrow-left me-2"></i>İptal
            </a>
        </div>
    </form>
</div>
