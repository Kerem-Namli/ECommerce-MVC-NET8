@model IEnumerable<ETicaret.Entity.Concrete.Category>
@{
    ViewData["Title"] = "Kategoriler";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Kategori Listesi</h2>
    <a asp-action="Create" class="btn btn-primary-custom">
        <i class="bi bi-plus-lg me-2"></i>Yeni Kategori
    </a>
</div>

<div class="table-dark-custom">
    <table class="table mb-0">
        <thead>
            <tr>
                <th>ID</th>
                <th>Kategori Adı</th>
                <th>Açıklama</th>
                <th>Durum</th>
                <th>Oluşturulma</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td><strong>@category.Name</strong></td>
                    <td>@(category.Description?.Length > 50 ? category.Description?.Substring(0, 50) + "..." : category.Description)</td>
                    <td>
                        @if (category.IsActive)
                        {
                            <span class="badge-status badge-delivered">Aktif</span>
                        }
                        else
                        {
                            <span class="badge-status badge-cancelled">Pasif</span>
                        }
                    </td>
                    <td>@category.CreatedDate.ToString("dd.MM.yyyy")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-edit-custom">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <form asp-action="Delete" asp-route-id="@category.Id" method="post" class="d-inline"
                              onsubmit="return confirm('Bu kategoriyi silmek istediğinizden emin misiniz?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
