@model IEnumerable<ETicaret.Entity.Concrete.Order>
@{
    ViewData["Title"] = "Siparişler";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Sipariş Listesi</h2>
</div>

<div class="table-dark-custom">
    <table class="table mb-0">
        <thead>
            <tr>
                <th>Sipariş No</th>
                <th>Müşteri</th>
                <th>Tarih</th>
                <th>Tutar</th>
                <th>Ödeme</th>
                <th>Durum</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td><strong>@order.OrderNumber</strong></td>
                    <td>@order.User?.FirstName @order.User?.LastName</td>
                    <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@order.TotalPrice.ToString("C2")</td>
                    <td>
                        @if (order.IsPaid)
                        {
                            <span class="badge-status badge-delivered">Ödendi</span>
                        }
                        else
                        {
                            <span class="badge-status badge-pending">Ödenmedi</span>
                        }
                    </td>
                    <td>
                        @{
                            var statusClass = order.Status switch {
                                ETicaret.Entity.Concrete.OrderStatus.Pending => "badge-pending",
                                ETicaret.Entity.Concrete.OrderStatus.Processing => "badge-processing",
                                ETicaret.Entity.Concrete.OrderStatus.Shipped => "badge-shipped",
                                ETicaret.Entity.Concrete.OrderStatus.Delivered => "badge-delivered",
                                ETicaret.Entity.Concrete.OrderStatus.Cancelled => "badge-cancelled",
                                _ => "badge-pending"
                            };
                            var statusText = order.Status switch {
                                ETicaret.Entity.Concrete.OrderStatus.Pending => "Bekliyor",
                                ETicaret.Entity.Concrete.OrderStatus.Processing => "Hazırlanıyor",
                                ETicaret.Entity.Concrete.OrderStatus.Shipped => "Kargoda",
                                ETicaret.Entity.Concrete.OrderStatus.Delivered => "Teslim Edildi",
                                ETicaret.Entity.Concrete.OrderStatus.Cancelled => "İptal",
                                _ => "Bekliyor"
                            };
                        }
                        <span class="badge-status @statusClass">@statusText</span>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-edit-custom">
                            <i class="bi bi-eye"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
