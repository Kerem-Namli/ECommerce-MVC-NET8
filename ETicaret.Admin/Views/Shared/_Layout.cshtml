<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Ticaret Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        /* Minimal inline styles or critical CSS if strictly necessary, otherwise move all to site.css */
    </style>
</head>
<body>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <aside class="sidebar">
            <div class="sidebar-brand">
                <i class="bi bi-shop"></i>
                <span>E-Ticaret Admin</span>
            </div>
            <nav class="sidebar-nav">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")" href="/Dashboard">
                            <i class="bi bi-speedometer2"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Products" ? "active" : "")" href="/Products">
                            <i class="bi bi-box-seam"></i>
                            <span>Ürünler</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Categories" ? "active" : "")" href="/Categories">
                            <i class="bi bi-grid"></i>
                            <span>Kategoriler</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Orders" ? "active" : "")" href="/Orders">
                            <i class="bi bi-cart3"></i>
                            <span>Siparişler</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "active" : "")" href="/Users">
                            <i class="bi bi-people"></i>
                            <span>Kullanıcılar</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>
        
        <main class="main-content">
            <header class="topbar">
                <h1 class="page-title">@ViewData["Title"]</h1>
                <div class="dropdown">
                    <button class="user-dropdown dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle"></i>
                        <span>@User.Identity?.Name</span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark">
                        <li>
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="dropdown-item">
                                    <i class="bi bi-box-arrow-right me-2"></i>Çıkış Yap
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </header>
            
            <div class="content-wrapper">
                @if (TempData["Success"] != null)
                {
                    <script>
                        document.addEventListener('DOMContentLoaded', function() {
                            Swal.fire({
                                icon: 'success',
                                title: 'İşlem Başarılı',
                                text: '@Html.Raw(TempData["Success"])',
                                showConfirmButton: false,
                                timer: 1500
                            });
                        });
                    </script>
                }
                @if (TempData["Error"] != null)
                {
                    <script>
                        document.addEventListener('DOMContentLoaded', function() {
                            Swal.fire({
                                icon: 'error',
                                title: 'Hata',
                                text: '@Html.Raw(TempData["Error"])'
                            });
                        });
                    </script>
                }
                
                @RenderBody()
            </div>
        </main>
    }
    else
    {
        @RenderBody()
    }
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
