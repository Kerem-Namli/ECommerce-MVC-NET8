@{
    ViewData["Title"] = "Yeni Kullanıcı Ekle";
}

<div class="stat-card">
    <h4 class="mb-4">Yeni Kullanıcı Ekle</h4>
    
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger-custom mb-4">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    }

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Ad</label>
                    <input name="firstName" class="form-control bg-dark text-light border-secondary" required />
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Soyad</label>
                    <input name="lastName" class="form-control bg-dark text-light border-secondary" required />
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">E-Posta</label>
            <input name="email" type="email" class="form-control bg-dark text-light border-secondary" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Şifre</label>
            <input name="password" type="password" class="form-control bg-dark text-light border-secondary" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Rol</label>
            <select name="role" class="form-select bg-dark text-light border-secondary" asp-items="ViewBag.Roles">
                <option value="">Rol Seçin</option>
            </select>
        </div>
        
        <div class="mt-4">
            <button type="submit" class="btn btn-primary-custom">
                <i class="bi bi-person-plus me-2"></i>Kullanıcı Oluştur
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                <i class="bi bi-arrow-left me-2"></i>İptal
            </a>
        </div>
    </form>
</div>
