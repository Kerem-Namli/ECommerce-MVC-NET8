@using ETicaret.Entity.Concrete
@model AppUser
@{
    ViewData["Title"] = "Kullanıcı Detayları";
    var roles = ViewBag.Roles as IList<string>;
}

<div class="stat-card">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4>Kullanıcı Detayları</h4>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Listeye Dön
        </a>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card bg-dark border-secondary mb-4">
                <div class="card-header border-secondary">
                    <h5 class="mb-0 text-white">Profil Bilgileri</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-white-50">Ad Soyad</dt>
                        <dd class="col-sm-8 text-white">@Model.FirstName @Model.LastName</dd>

                        <dt class="col-sm-4 text-white-50">Kullanıcı Adı</dt>
                        <dd class="col-sm-8 text-white">@Model.UserName</dd>

                        <dt class="col-sm-4 text-white-50">Email</dt>
                        <dd class="col-sm-8 text-white">@Model.Email</dd>
                        
                        <dt class="col-sm-4 text-white-50">Telefon</dt>
                        <dd class="col-sm-8 text-white">@(Model.PhoneNumber ?? "-")</dd>

                        <dt class="col-sm-4 text-white-50">Kayıt Tarihi</dt>
                        <dd class="col-sm-8 text-white">@DateTime.Now.ToString("dd.MM.yyyy")</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card bg-dark border-secondary mb-4">
                <div class="card-header border-secondary">
                    <h5 class="mb-0 text-white">Hesap Durumu</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-white-50">Durum</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Pasif</span>
                            }
                        </dd>

                        <dt class="col-sm-4 text-white-50">Roller</dt>
                        <dd class="col-sm-8">
                            @if (roles != null && roles.Any())
                            {
                                @foreach (var role in roles)
                                {
                                    <span class="badge bg-info me-1">@role</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">Rol atanmamış</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-4 text-white-50">Email Onayı</dt>
                        <dd class="col-sm-8">
                            @if (Model.EmailConfirmed)
                            {
                                <span class="text-success"><i class="bi bi-check-circle-fill me-1"></i>Onaylı</span>
                            }
                            else
                            {
                                <span class="text-warning"><i class="bi bi-exclamation-circle-fill me-1"></i>Onaysız</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="d-flex gap-2">
                <form asp-action="ToggleActive" asp-route-id="@Model.Id" method="post" class="flex-grow-1">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn @(Model.IsActive ? "btn-warning" : "btn-success") w-100">
                        <i class="bi @(Model.IsActive ? "bi-person-x" : "bi-person-check") me-2"></i>
                        @(Model.IsActive ? "Pasifleştir" : "Aktifleştir")
                    </button>
                </form>
                
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="flex-grow-1" 
                      onsubmit="return confirm('Bu kullanıcıyı silmek istediğinizden emin misiniz?');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger w-100">
                        <i class="bi bi-trash me-2"></i>Sil
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
