@model IEnumerable<ETicaret.Entity.Concrete.AppUser>
@{
    ViewData["Title"] = "Kullanıcılar";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Kullanıcı Listesi</h2>
    <div>
        <a asp-action="Create" class="btn btn-primary-custom me-3">
            <i class="bi bi-person-plus me-2"></i>Yeni Kullanıcı Ekle
        </a>
        <span class="badge bg-primary fs-6">@Model.Count() Kullanıcı</span>
    </div>
</div>

<div class="table-dark-custom">
    <table class="table mb-0">
        <thead>
            <tr>
                <th>Kullanıcı</th>
                <th>E-posta</th>
                <th>Telefon</th>
                <th>Kayıt Tarihi</th>
                <th>Durum</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <div class="stat-icon blue me-3" style="width: 40px; height: 40px; font-size: 1rem;">
                                <i class="bi bi-person"></i>
                            </div>
                            <div>
                                <strong>@user.FirstName @user.LastName</strong>
                                <br />
                                <small class="text-muted">@user.UserName</small>
                            </div>
                        </div>
                    </td>
                    <td>@user.Email</td>
                    <td>@(user.PhoneNumber ?? "-")</td>
                    <td>@user.CreatedDate.ToString("dd.MM.yyyy")</td>
                    <td>
                        @if (user.IsActive)
                        {
                            <span class="badge-status badge-delivered">Aktif</span>
                        }
                        else
                        {
                            <span class="badge-status badge-cancelled">Pasif</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-edit-custom">
                            <i class="bi bi-eye"></i>
                        </a>
                        <form asp-action="ToggleActive" asp-route-id="@user.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-outline-warning" title="@(user.IsActive ? "Pasifleştir" : "Aktifleştir")">
                                <i class="bi bi-toggle-@(user.IsActive ? "on" : "off")"></i>
                            </button>
                        </form>
                        <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline"
                              onsubmit="return confirm('Bu kullanıcıyı silmek istediğinizden emin misiniz?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
