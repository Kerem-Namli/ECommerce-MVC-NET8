@using ETicaret.Entity.Concrete
@using ETicaret.Entity.DTOs
@using ETicaret.Web.Controllers
@model AppUser
@{
    ViewData["Title"] = "Alışverişi Tamamla";
    var cart = ViewBag.Cart as CartDto;
    var cartTotal = (decimal)(ViewBag.CartTotal ?? 0);
}

<div class="container py-5">
    <h2 class="mb-4">Alışverişi Tamamla</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="row g-5">
        <!-- Address & Payment Form -->
        <div class="col-md-7 col-lg-8">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">
                    <h4 class="mb-3">Teslimat ve Ödeme Bilgileri</h4>
                    <form asp-action="PlaceOrder" method="post">
                        <div class="row g-3">
                            <div class="col-12">
                                <label for="address" class="form-label">Adres</label>
                                <textarea class="form-control" name="Address" id="address" rows="3" required placeholder="Sokak, Mahalle, Bina No..."></textarea>
                            </div>

                            <div class="col-sm-6">
                                <label for="city" class="form-label">Şehir</label>
                                <input type="text" class="form-control" name="City" id="city" required>
                            </div>

                            <div class="col-sm-6">
                                <label for="district" class="form-label">İlçe</label>
                                <input type="text" class="form-control" name="District" id="district" required>
                            </div>
                            
                            <div class="col-sm-6">
                                <label for="postalCode" class="form-label">Posta Kodu</label>
                                <input type="text" class="form-control" name="PostalCode" id="postalCode">
                            </div>

                            <div class="col-sm-6">
                                <label for="phone" class="form-label">Telefon</label>
                                <input type="tel" class="form-control" name="Phone" id="phone" value="@(Model?.PhoneNumber)" required>
                            </div>

                            <hr class="my-4">

                            <h4 class="mb-3">Ödeme Yöntemi</h4>

                            <div class="my-3">
                                <div class="form-check">
                                    <input id="credit" name="PaymentMethod" type="radio" class="form-check-input" value="Kredi Kartı" checked required>
                                    <label class="form-check-label" for="credit">Kredi Kartı</label>
                                </div>
                                <div class="form-check">
                                    <input id="bank" name="PaymentMethod" type="radio" class="form-check-input" value="Havale/EFT" required>
                                    <label class="form-check-label" for="bank">Havale / EFT</label>
                                </div>
                                <div class="form-check">
                                    <input id="door" name="PaymentMethod" type="radio" class="form-check-input" value="Kapıda Ödeme" required>
                                    <label class="form-check-label" for="door">Kapıda Ödeme</label>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <button class="btn btn-hero w-100 btn-lg" type="submit">Siparişi Tamamla</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="col-md-5 col-lg-4">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">
                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                        <span class="text-primary">Sepetiniz</span>
                        <span class="badge bg-primary rounded-pill">@(cart?.CartItems.Sum(i => i.Quantity) ?? 0)</span>
                    </h4>
                    
                    @if (cart != null && cart.CartItems.Any())
                    {
                        <ul class="list-group mb-3">
                            @foreach (var item in cart.CartItems)
                            {
                                <li class="list-group-item d-flex justify-content-between lh-sm">
                                    <div>
                                        <h6 class="my-0">@item.ProductName</h6>
                                        <small class="text-muted">@item.Quantity Adet</small>
                                    </div>
                                    <span class="text-muted">@((item.UnitPrice * item.Quantity).ToString("C2"))</span>
                                </li>
                            }
                            <li class="list-group-item d-flex justify-content-between bg-light">
                                <span class="fw-bold">Toplam (TL)</span>
                                <strong class="text-primary">@cartTotal.ToString("C2")</strong>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <div class="alert alert-warning">Sepetinizde ürün bulunmamaktadır.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
