@model IEnumerable<ProductDto>
@{
    ViewData["Title"] = "Ürünler";
    var categories = ViewBag.Categories as IEnumerable<ETicaret.Entity.Concrete.Category>;
}

<div class="container py-5">
    <div class="row">
        <!-- Sidebar Filters -->
        <div class="col-lg-3 mb-4">
            <div class="card border-0 shadow-sm" style="border-radius: 1rem;">
                <div class="card-body">
                    <h5 class="mb-4">Filtrele</h5>
                    <form action="/Products" method="get">
                        <div class="mb-4">
                            <label class="form-label fw-bold">Kategori</label>
                            @if (categories != null)
                            {
                                @foreach (var category in categories)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="categoryId" 
                                               value="@category.Id" id="cat@(category.Id)"
                                               @(ViewBag.SelectedCategory == category.Id ? "checked" : "")>
                                        <label class="form-check-label" for="cat@(category.Id)">
                                            @category.Name
                                        </label>
                                    </div>
                                }
                            }
                        </div>
                        <div class="mb-4">
                            <label class="form-label fw-bold">Fiyat Aralığı</label>
                            <div class="row g-2">
                                <div class="col-6">
                                    <input type="number" class="form-control" name="minPrice" 
                                           placeholder="Min" value="@ViewBag.MinPrice">
                                </div>
                                <div class="col-6">
                                    <input type="number" class="form-control" name="maxPrice" 
                                           placeholder="Max" value="@ViewBag.MaxPrice">
                                </div>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label class="form-label fw-bold">Sıralama</label>
                            <select class="form-select" name="sortBy">
                                <option value="">Varsayılan</option>
                                @{
                                    var sortBy = ViewBag.SortBy as string;
                                }
                                <option value="price_asc" selected="@(sortBy == "price_asc")">Fiyat: Düşükten Yükseğe</option>
                                <option value="price_desc" selected="@(sortBy == "price_desc")">Fiyat: Yüksekten Düşüğe</option>
                                <option value="name_asc" selected="@(sortBy == "name_asc")">A-Z</option>
                                <option value="newest" selected="@(sortBy == "newest")">En Yeni</option>
                            </select>
                        </div>
                        <button type="submit" class="btn w-100" style="background: var(--gradient-primary); color: white; border-radius: 50px;">
                            <i class="bi bi-funnel me-2"></i>Filtrele
                        </button>
                        <a href="/Products" class="btn btn-outline-secondary w-100 mt-2" style="border-radius: 50px;">
                            Filtreleri Temizle
                        </a>
                    </form>
                </div>
            </div>
        </div>

        <!-- Products Grid -->
        <div class="col-lg-9">
            @if (ViewBag.SearchTerm != null)
            {
                <div class="alert alert-info mb-4" style="border-radius: 1rem;">
                    <i class="bi bi-search me-2"></i>"<strong>@ViewBag.SearchTerm</strong>" için @Model.Count() sonuç bulundu.
                </div>
            }
            
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="mb-0">
                    @if (ViewBag.SelectedCategory != null && categories != null)
                    {
                        @categories.FirstOrDefault(c => c.Id == ViewBag.SelectedCategory)?.Name
                    }
                    else
                    {
                        <text>Tüm Ürünler</text>
                    }
                </h4>
                <span class="text-muted">@Model.Count() ürün</span>
            </div>

            <div class="row g-4">
                @foreach (var product in Model)
                {
                    <div class="col-6 col-md-4">
                        <div class="product-card">
                            <div class="product-image-wrapper">
                                <a href="/Products/Details/@product.Id">
                                    <img src="@(product.ImageUrl ?? "https://via.placeholder.com/400")" 
                                         alt="@product.Name" class="product-image">
                                </a>
                                @if (product.IsFeatured)
                                {
                                    <span class="product-badge">Öne Çıkan</span>
                                }
                                <button class="product-quick-add" onclick="addToCart(@product.Id)">
                                    <i class="bi bi-cart-plus me-1"></i> Sepete Ekle
                                </button>
                            </div>
                            <div class="product-content">
                                <span class="product-category">@product.CategoryName</span>
                                <h3 class="product-title">
                                    <a href="/Products/Details/@product.Id" style="text-decoration: none; color: inherit;">
                                        @product.Name
                                    </a>
                                </h3>
                                <div class="product-price">
                                    @if (product.DiscountPrice.HasValue)
                                    {
                                        <span class="old-price">@product.Price.ToString("C2")</span>
                                        @product.DiscountPrice.Value.ToString("C2")
                                    }
                                    else
                                    {
                                        @product.Price.ToString("C2")
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                    <h4 class="mt-3">Ürün Bulunamadı</h4>
                    <p class="text-muted">Filtreleri değiştirmeyi deneyin.</p>
                </div>
            }
        </div>
    </div>
</div>
